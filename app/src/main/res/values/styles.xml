<resources>

    <style name="Widget.Theme.Anotação.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Anotação.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>




    <!-- Menu Drawer   -->

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="colorPrimaryDark">@color/cardview_dark_background</item>
        <item name="colorAccent">@color/teal_200</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="AppTheme.PopupOverlay">

        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="colorPrimaryDark">@color/cardview_dark_background</item>
        <item name="colorAccent">@color/teal_200</item>

    </style>
</resources>